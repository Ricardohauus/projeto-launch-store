{% extends "layout.njk" %}

{% block content %}
  <section class="password container form">
    <form method="POST" action="/users/password-reset">
      <input type="hidden" name="token" value="{{token}}">
      <div class="header">
        <h3>Nova senha</h3>
      </div>

      <div class="fields">
        <div class="item">
          <div>Email</div>
          <div class="input">
            <input type="email" name="email" placeholder="Digite seu email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
          </div>
        </div>

        <div class="item">
          <div>Senha</div>
          <div class="input">
            <input type="password" name="password" placeholder="Digite uma nova senha" onblur="Validate.apply(this, 'isPassword')">
          </div>
        </div>

        <div class="item">
          <div>Repetição da Senha</div>
          <div class="input">
            <input type="password" name="passwordRepeat" placeholder="Repita a nova senha" onblur="Validate.apply(this, 'isPassword')">
          </div>
        </div>

      </div>

      <button class="button" type="submit">Nova senha</button>

    </form>
  </section>
{% endblock %}