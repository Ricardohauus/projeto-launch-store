{% extends "layout.njk" %}

{% block content %}
  <section class="login container form">
    <form method="POST" action="/users/login">

      <div class="fields">
        <div class="header">
          <h3>Login</h3>
        </div>

        <div class="item">
          <div>Email</div>
          <div class="input">
            <input required="required" value="{{user.email}}" onblur="Validate.apply(this,'isEmail')" type="email" name="email" placeholder="Digite seu e-mail">
          </div>
        </div>

        <div class="item">
          <div>Senha</div>
          <div class="input">
            <input id="password" required="required" type="password" name="password" placeholder="Digite sua senha">
          </div>
        </div>

        <button class="button" type="submit">
          Login
        </button>

        <div class="footer">
          <ul>
            <li>
              <a href="/users/register">Registre-se</a>
            </li>
            <li>
              <a href="/users/forgot-password">Esqueci a senha</a>
            </li>
          </ul>
        </div>
      </form>

    </section>
  {% endblock %}