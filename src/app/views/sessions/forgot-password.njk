{% extends "layout.njk" %}

{% block content %}
  <section class="password container form">
    <form method="POST" action="/users/forgot-password">

      <div class="fields">
        <div class="header">
          <h3>Recuperar senha</h3>
        </div>

        <div class="item">
          <div>Email</div>
          <div class="input">
            <input required="required" value="{{user.email}}" onblur="Validate.apply(this,'isEmail')" type="email" name="email" placeholder="Digite seu e-mail">
          </div>
        </div>

        <button class="button" type="submit">
          Enviar
        </button>
      </form>

    </section>
  {% endblock %}