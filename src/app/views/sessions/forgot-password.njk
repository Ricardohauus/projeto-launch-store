{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}
  {% call cards.render('Recuperar senha', 'password container') %}
  <form method="POST" action="/users/forgot-password">

    <div class="fields">

      <div class="item">
        <div>Email</div>
        <div class="input">
          <input required="required" value="{{user.email}}" onblur="Validate.apply(this,'isEmail')" type="email" name="email" placeholder="Digite seu e-mail">
        </div>
      </div>

      <button class="button" type="submit">
          Enviar
        </button>
    </form>

    {% endcall %}

  {% endblock %}