      <input type="text" name="filter" placeholder="Busca por Produtos" {% if search.term %} value="{{search.term}}" {% endif %}>
    </form>

    <nav class="primary">
      <ul>
        <li>
          <a href="/ads/create">
            <i class="material-icons">add</i>
